@model Latest_News.ViewModel.CategoriesViewModel

@{
    ViewData["Title"] = "Create";
}
<br>

<br>
<div class="container">
    <div class="row">
        <h4>Create New Catégories</h4>
        <hr />
        <div class="col-md-10">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="cat_Nom" class="control-label">Catégories</label>
                    <input asp-for="cat_Nom" class="form-control" />
                    <span asp-validation-for="cat_Nom" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="file" class="control-label"></label>
                    <input type="file" name="file" asp-for="file" class="form-control" />
                    <span asp-validation-for="file" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Create" class="genric-btn success circle arrow" />
                    <a asp-action="Index" class="genric-btn success-border circle arrow">
                        Back to List<span class="lnr lnr-arrow-right"></span>
                    </a>

                </div>
                <br>
            </form>
        </div>
    </div>
    </div>

