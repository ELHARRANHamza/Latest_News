@model IEnumerable<Latest_News.Models.Latest_News>

@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="container">
    <div class="row">

        <p>
            <a asp-action="Create" class="genric-btn success circle arrow">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.Titre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th>
                        Date Publiciter
                    </th>
                    <th>
                        Mettre a jour
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Titre)
                        </td>
                        <td>
                          @item.Description.Substring(0,50)
                        </td>
                        <td>
                            <img src="~/Image_News/@item.Image" style="width:70px;height:70px;border-radius:50%" />
                        </td>
                      
                        <td>
                            @Html.DisplayFor(modelItem => item.date_Publiciter)
                        </td>
                        <td>
                            <a href="/Latest_News/Details/@item.id" class="genric-btn warning small" style="width:10px;padding-left:8px;padding-right:20px">
                                <span class="fa fa-eye"></span>
                            </a>
                            <a href="/Latest_News/Edit/@item.id" class="genric-btn primary small" style="width:10px;padding-left:8px;padding-right:20px">
                                <span class="fa fa-edit"></span>
                            </a>
                            <a href="/Latest_News/Delete/@item.id" class="genric-btn danger small" style="width:10px;padding-left:8px;padding-right:20px">
                                <span class="fa fa-trash"></span>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>